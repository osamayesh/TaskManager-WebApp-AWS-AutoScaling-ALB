@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Privacy Policy
                    </h2>
                </div>
                <div class="card-body p-4">
                    <p class="lead">
                        Your privacy is important to us. This privacy policy explains how Task Manager collects, uses, and protects your information.
                    </p>
                    
                    <hr class="my-4">
                    
                    <h4 class="text-primary">
                        <i class="fas fa-info-circle me-2"></i>Information We Collect
                    </h4>
                    <ul class="mb-4">
                        <li><strong>Personal Information:</strong> Name, email address, and password (encrypted)</li>
                        <li><strong>Task Data:</strong> Task titles, descriptions, due dates, and completion status</li>
                        <li><strong>Usage Data:</strong> Login times, feature usage, and performance metrics</li>
                    </ul>
                    
                    <h4 class="text-primary">
                        <i class="fas fa-lock me-2"></i>How We Protect Your Data
                    </h4>
                    <ul class="mb-4">
                        <li><strong>Encryption:</strong> All passwords are hashed using BCrypt</li>
                        <li><strong>Secure Authentication:</strong> JWT tokens with expiration</li>
                        <li><strong>Database Security:</strong> Encrypted storage and secure connections</li>
                        <li><strong>Access Control:</strong> Users can only access their own tasks</li>
                    </ul>
                    
                    <h4 class="text-primary">
                        <i class="fas fa-user-check me-2"></i>Your Rights
                    </h4>
                    <ul class="mb-4">
                        <li><strong>Access:</strong> View all your personal data</li>
                        <li><strong>Correction:</strong> Update or correct your information</li>
                        <li><strong>Deletion:</strong> Request deletion of your account and data</li>
                        <li><strong>Portability:</strong> Export your task data</li>
                    </ul>
                    
                    <h4 class="text-primary">
                        <i class="fas fa-share-alt me-2"></i>Data Sharing
                    </h4>
                    <p class="mb-4">
                        We <strong>do not</strong> sell, trade, or share your personal information with third parties. 
                        Your task data remains private and is only accessible to you.
                    </p>
                    
                    <h4 class="text-primary">
                        <i class="fas fa-cookie-bite me-2"></i>Cookies and Tracking
                    </h4>
                    <ul class="mb-4">
                        <li><strong>Authentication Cookies:</strong> Used to keep you logged in</li>
                        <li><strong>Session Cookies:</strong> Temporary cookies for site functionality</li>
                        <li><strong>No Tracking:</strong> We don't use analytics or tracking cookies</li>
                    </ul>
                    
                    <div class="alert alert-info">
                        <div class="row align-items-center">
                            <div class="col-md-1 text-center">
                                <i class="fas fa-envelope fa-2x"></i>
                            </div>
                            <div class="col-md-11">
                                <h6 class="alert-heading mb-2">Questions About Privacy?</h6>
                                <p class="mb-0">
                                    If you have any questions about this privacy policy or how we handle your data, 
                                    please contact us at <strong>privacy@taskmanager.com</strong>.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <small class="text-muted">
                            Last updated: December 2024<br>
                            Task Manager - Built with ASP.NET Core
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 