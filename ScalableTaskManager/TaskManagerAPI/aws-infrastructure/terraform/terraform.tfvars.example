# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# EC2 Configuration
ami_id = "ami-0c02fb55956c7d316"  # Amazon Linux 2 AMI (us-east-1)
instance_type = "t3.medium"
key_pair_name = "your-ec2-key-pair"  # Replace with your actual key pair name

# RDS Configuration
db_instance_class = "db.t3.micro"
db_username = "taskmanager"
db_password = "your-secure-database-password"  # Replace with a strong password
enable_multi_az = true

# Auto Scaling Configuration
asg_min_size = 1
asg_max_size = 5
asg_desired_capacity = 2

# SNS Alerts Configuration
alert_email = "your-email@example.com"  # Replace with your email for alerts 